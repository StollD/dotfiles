#!/bin/sh

sudo dnf remove -y fedora-repos-modular
sudo dnf config-manager --set-enabled updates-testing
sudo dnf config-manager --set-disabled fedora-cisco-openh264
sudo dnf distro-sync -y

sudo dnf groupinstall -y rpm-development-tools
sudo dnf groupinstall -y c-development

sudo dnf copr enable deathwish/emacs-pgtk-nativecomp

sudo dnf install -y \
	glibc-all-langpacks \
	emacs \
	fish \
	meson \
	cmake \
	make \
	gcc \
	clang \
	ccls \
	rpkg \
	ripgrep \
	fd-find \
	editorconfig \
	jq \
	pandoc \
	libmarkdown \
	ShellCheck \
	python3-isort \
	pipenv \
	python3-nose \
	python3-pytest \
	libvterm \
	fira-code-fonts \
	npm \
	gnome-themes-extra \
	adwaita-gtk2-theme \
	htop

sudo npm i -g bash-language-server
