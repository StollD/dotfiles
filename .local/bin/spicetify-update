#!/bin/sh

if [ -d "$HOME/.local/share/spicetify" ]; then
	rm -r $HOME/.local/share/spicetify
fi

URL=$(curl --silent "https://api.github.com/repos/khanhas/spicetify-cli/releases/latest" | 
	tr ',' '\n' | grep '"browser_download_url":' | 
	sed -E 's/.*"([^"]+)".*/\1/' | grep 'linux')
wget -O spicetify.tar.gz $URL

mkdir -p $HOME/.local/share/spicetify
tar xzf spicetify.tar.gz -C $HOME/.local/share/spicetify
rm spicetify.tar.gz
